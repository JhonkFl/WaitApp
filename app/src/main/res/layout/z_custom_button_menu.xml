<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialogbg">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:src="@drawable/dis_b"
        android:layout_gravity="center|top"
        android:scaleType="centerCrop"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/createText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="viewStart"
        android:text="Menú"
        android:padding="8dp"
        android:textColor="#2196F3"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/cancelButton"
        android:layout_width="37dp"
        android:layout_height="34dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/equis" />

</LinearLayout>


    <LinearLayout
        android:id="@+id/layoutOpcio1"
        android:layout_width="match_parent"
        android:layout_height="51dp"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="47dp"
            android:src="@drawable/casa" />

        <TextView
            android:id="@+id/lblSesion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Registrar mi Negocio"
            android:textColor="#2196F3"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOpcio2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="6dp">

        <ImageView
            android:layout_width="39dp"
            android:layout_height="35dp"
            android:src="@drawable/categor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Más Appss"
            android:textColor="#2196F3"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutOpcion3"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="4dp">

        <androidx.cardview.widget.CardView
            android:layout_width="39dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            app:cardCornerRadius="8dp">

            <ImageView
                android:layout_width="39dp"
                android:layout_height="37dp"
                android:background="#940909"
                android:src="@drawable/equis" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:text="Cerra Sesión"
            android:textColor="#2196F3"
            android:textSize="16sp" />

    </LinearLayout>

</LinearLayout>