<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragSala.Negc.SalaN3">

    <LinearLayout
        android:id="@+id/tab3Neg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnPagoNeg3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:backgroundTint="#B4A60424"
                android:layout_marginStart="10dp"
                android:gravity="center"
                android:textColor="#D3FFFFFF"
                android:text="Limpiar Error"
                android:textSize="14sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn5Mas3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:backgroundTint="#9C27B0"
                android:text="+ 5 Min"/>

            <Button
                android:id="@+id/btn10Mas3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:backgroundTint="#9C27B0"
                android:text="+ 10 Min"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblTiempoNeg3"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:paddingStart="10dp"
                android:text="5 minutos"
                android:textColor="#3F51B5"
                android:visibility="gone"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblMensajeTiempoNeg3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:text="Agregue 5 o 10 minutos mÃ¡s si lo necesita"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSala3Neg"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="20dp"
                android:layout_gravity="center"
                android:visibility="visible" />


            <Button
                android:id="@+id/btnReservarTurnoNeg3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#9C27B0"
                android:text="Agregar Cliente a la Fila"
                app:cornerRadius="10dp" />
        </androidx.appcompat.widget.LinearLayoutCompat>


    </LinearLayout>


</FrameLayout>