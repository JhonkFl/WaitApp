<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.FragmentSalaC.SalaC3">

    <LinearLayout
        android:id="@+id/tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnPago3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/border_text"
                android:backgroundTint="#5B0A71"
                android:gravity="center"
                android:text="Pagar"
                android:textColor="@color/white"
                android:visibility="gone"
                android:textSize="20sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/lblSalaC3"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:text="Sala 3"
                android:textSize="25dp"
                android:textStyle="bold"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lblMensajeTiempo3"
                android:layout_width="243dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:text="Tiempo para ser Atendido:"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lblTiempo3"
                android:layout_width="128dp"
                android:layout_height="33dp"
                android:layout_marginTop="12dp"
                android:paddingStart="10dp"
                android:text="10 Minutos"
                android:textColor="#A70BD1"
                android:textSize="19sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSala3Client"
            android:layout_width="336dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnReservarTurno3"
            android:layout_width="302dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="#5B0A71"
            android:textColor="@color/white"
            android:text="Hacer Fila"
            app:cornerRadius="10dp" />
    </LinearLayout>

</FrameLayout>