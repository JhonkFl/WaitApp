<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Cliente.FragmentSalaC.SalaC3">

    <LinearLayout
        android:id="@+id/tab3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/NPersonas3"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:paddingStart="30dp"
                android:text="0"
                android:textColor="#880CA9"
                android:textSize="28sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                android:text=" Personas haciendo Fila"
                android:textSize="21sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:id="@+id/lblMensajeTiempo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tiempo de Espera"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:paddingBottom="10dp"
                    android:textAlignment="center"/>
                <TextView
                    android:id="@+id/lblTiempo3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00 hrs"
                    android:textAlignment="center"
                    android:textColor="@color/color_morado"
                    android:textStyle="bold"
                    android:visibility="gone"
                    android:textSize="28sp"/>
                <TextView
                    android:id="@+id/lblTiempoGlobal3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00:00:00 hrs"
                    android:textAlignment="center"
                    android:textColor="@color/color_morado"
                    android:textSize="28sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardLista3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="20sp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvSala3Client"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardTraslado3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            android:visibility="gone"
            app:cardCornerRadius="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:padding="14dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="El Negocio lo esta Esperando !!"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="19sp"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:cardCornerRadius="10dp"
                    android:layout_marginVertical="10dp">
                    <ImageView
                        android:id="@+id/ImgAuto3"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirigase al Negocio por Favor."
                    android:textSize="17sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/CardDatos3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="20dp"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="20sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="Datos Solicitados"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:paddingBottom="10dp"/>
                    <ImageView
                        android:id="@+id/btnLista3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/list"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Servicio:"
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:paddingBottom="4dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Precio :   "
                            android:textStyle="bold"
                            android:textSize="23sp"
                            android:paddingBottom="4dp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pagar: "
                            android:textStyle="bold"
                            android:textSize="23sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pago:"
                            android:textStyle="bold"
                            android:textSize="23sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/lblServSelecc3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textSize="22sp"
                            android:paddingBottom="5dp"/>
                        <TextView
                            android:id="@+id/lblPrecioSelecc3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="..."
                            android:textSize="22sp"
                            android:paddingBottom="5dp"/>
                        <TextView
                            android:id="@+id/lblTPagoSelecc3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Efectivo"
                            android:textSize="22sp"
                            android:paddingBottom="5dp"/>
                        <TextView
                            android:id="@+id/lblPagado3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pendiente"
                            android:textSize="22sp"/>
                    </LinearLayout>
                    <ImageView
                        android:id="@+id/imgEspera3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="2"
                        android:layout_gravity="center"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/LinerIdentificacion3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Identificación:"
                android:textSize="20sp" />
            <TextView
                android:id="@+id/lblIdentificacion3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textColor="@color/color_text"
                android:text="Nombre"
                android:textSize="22sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnReservarTurno3"
            android:layout_width="302dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            android:backgroundTint="#5B0A71"
            android:textColor="@color/white"
            android:text="Hacer Fila"
            app:cornerRadius="10dp" />

        <Button
            android:id="@+id/btnPago3"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:backgroundTint="#4CAF50"
            android:text="Pagar"
            android:textColor="@color/white"
            app:cornerRadius="10dp"
            android:visibility="gone"/>
    </LinearLayout>

</FrameLayout>