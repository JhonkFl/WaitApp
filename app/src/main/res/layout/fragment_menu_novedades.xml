<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragMenu.Client.MenuNovedades">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="89dp"
            android:layout_height="44dp"
            android:layout_marginTop="4dp"
            android:rotationX="130"
            android:rotationY="18"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ss" />

        <ImageView
            android:id="@+id/imageView19"
            android:layout_width="337dp"
            android:layout_height="315dp"
            android:layout_marginTop="200dp"
            android:foregroundTint="#FF5722"
            android:rotationY="180"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/img1"
            app:srcCompat="@drawable/bg1" />

        <ImageView
            android:id="@+id/imageView20"
            android:layout_width="86dp"
            android:layout_height="112dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/estrella" />

        <TextView
            android:id="@+id/textView30"
            android:layout_width="218dp"
            android:layout_height="88dp"
            android:layout_marginTop="16dp"
            android:text="Novedades de WaitApp"
            android:textAlignment="center"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTituloNoti"
            android:layout_width="358dp"
            android:layout_height="53dp"
            android:layout_marginTop="16dp"
            android:text="Titulo"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.471"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30" />

        <View
            android:id="@+id/divider4"
            android:layout_width="409dp"
            android:layout_height="4dp"
            android:background="?android:attr/listDivider"
            android:backgroundTint="#FF9800"
            app:layout_constraintBottom_toTopOf="@+id/lblTituloNoti"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView30"
            app:layout_constraintVertical_bias="0.196" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/lblDescripcion1"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:text="Descripcion Prinpipal"
            android:textStyle="bold"
            android:textSize="17sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/lblTituloNoti"
            app:layout_constraintTop_toBottomOf="@+id/lblTituloNoti" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="151dp"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.892"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDescripcion1"
            app:srcCompat="@drawable/mas" />

        <com.codesgood.views.JustifiedTextView
            android:id="@+id/lblDescripcion2"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Info...."
            android:textSize="16sp"
            android:paddingTop="10dp"
            app:layout_constraintEnd_toStartOf="@+id/img1"
            app:layout_constraintStart_toStartOf="@+id/lblDescripcion1"
            app:layout_constraintTop_toBottomOf="@+id/lblDescripcion1" />

        <ImageView
            android:id="@+id/SoloImagen"
            android:layout_width="344dp"
            android:layout_height="461dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblDescripcion1"/>

        <Button
            android:id="@+id/btnActualizarApp"
            android:layout_width="167dp"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:backgroundTint="#FF5722"
            android:text="Actualizar"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>