<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="10dp">

    <ImageView
        android:id="@+id/ImagenServicio"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/produ" />

    <LinearLayout
        android:id="@+id/linerNegocios"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00F3C9FA"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="116dp"
            app:cardBackgroundColor="#00FFFFFF"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/lblServicio"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:background="#B4FFFFFF"
            android:gravity="center"
            android:text="Servicio"
            android:textColor="#3F51B5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="105dp"
                android:layout_height="wrap_content"
                android:background="#F9FBFB"
                android:gravity="right"
                android:text="Precio:  $"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/lblPrecio"
                android:layout_width="51dp"
                android:layout_height="match_parent"
                android:background="#FEFEFF"
                android:gravity="center"
                android:text="00.00"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnEliminarServicio"
                android:layout_width="85dp"
                android:layout_height="wrap_content"
                android:background="#EF1212"
                android:padding="5dp"
                app:srcCompat="@drawable/ic_delete" />

            <ImageView
                android:id="@+id/btnEditarServicio"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:background="#4CAF50"
                app:srcCompat="@drawable/ic_edit" />
        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>