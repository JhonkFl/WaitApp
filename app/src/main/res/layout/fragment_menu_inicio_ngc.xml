<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Negocio.FragmentMenu.Menu_Inicio_Ngc">

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:scaleX="1.3"
        android:scaleY="1.3"
        android:src="@drawable/curva_arriba"
        android:translationY="-70dp" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#05FFFAFA"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnCompartir"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/float_transparent"
                android:scaleType="centerCrop"
                android:src="@drawable/descargar" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:visibility="gone"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/BtnNoticiaLoc"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="#00FFFFFF"
                    android:scaleType="centerCrop"
                    android:src="@drawable/notif"/>

                <TextView
                    android:id="@+id/lblValorNoti"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="0"
                    android:textColor="@color/white"
                    android:background="@drawable/background_blue"
                    android:textAlignment="center"
                    android:translationY="-8dp"
                    android:translationX="-20dp"
                    android:translationZ="2dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <ImageView
                android:id="@+id/imgLocalAdmin"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="100dp"
                android:src="@drawable/ic_person" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Codigo:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lblCodigoLV"
                    android:layout_width="77dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="A000"
                    android:textAlignment="center"
                    android:textColor="#FF9800"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/imgBntEdit"
                    android:layout_width="66dp"
                    android:layout_height="55dp"
                    android:backgroundTint="#373F51B5"
                    app:srcCompat="@android:drawable/ic_menu_edit"/>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/lblNombreLocalSala"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Local Virtual"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/lblCantidad"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="#FFEB3B"
                android:text="Cantidad de salas" />

            <TextView
                android:id="@+id/lblCorreoNgc"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingStart="10dp"
                android:textColor="@color/white"
                android:text="Correo@email.com" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/linerMenuNegocio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:paddingTop="80dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible">
            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="2"/>
            <LinearLayout
                android:id="@+id/btnSalaVirtualA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="138dp"
                    android:layout_height="85dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp">

                    <ImageView
                        android:layout_width="140dp"
                        android:layout_height="90dp"
                        android:translationY="-3dp"
                        android:src="@drawable/personas"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:text="Sala Virtual"/>
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="2"/>

            <LinearLayout
                android:id="@+id/btnAbrirHorario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">
                <androidx.cardview.widget.CardView
                    android:layout_width="138dp"
                    android:layout_height="85dp"
                    android:backgroundTint="@color/white"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="8dp">

                    <ImageView
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:layout_gravity="center"
                        android:src="@drawable/calen2"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="Mi Horario"/>
            </LinearLayout>

            <Space
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_weight="2"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/contenedor"
            android:layout_width="match_parent"
            android:layout_height="540dp"
            android:translationY="-400dp"
            android:translationZ="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imageVie1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:translationY="80dp"
            android:translationX="140dp"
            android:src="@drawable/estrella" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</FrameLayout>