<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#16141414"
    tools:context=".Principal.A_Bienvenida"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/portBienvenida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/curva_superior"
        android:translationY="-30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sea Bienvenid@!!!"
            android:textColor="#FFC107"
            android:textSize="27sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="291dp"
            android:layout_height="54dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Ahorra tu tiempo en nuestra Fila Virtual!!!"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.493"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.423"
            app:lottie_autoPlay="true"
            app:lottie_fileName="robot.json"
            app:lottie_imageAssetsFolder="assets"
            app:lottie_loop="true"></com.airbnb.lottie.LottieAnimationView>

        <TextView
            android:id="@+id/lblMsgBienvenida"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Entrar como:"
            android:textColor="#3F51B5"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#2196F3"
                android:text="Cliente"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/ic_person"
                app:iconSize="30dp" />

            <Space
                android:layout_width="10dp"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/btnNegocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#2196F3"
                android:text="Negocio"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:icon="@drawable/tienda"
                app:iconSize="30dp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="30dp"
            android:paddingRight="20dp"
            android:text="* Seleccione Cliente si solo va a utilizar la App para esperar en cualquier negocio..."
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:paddingStart="30dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:text="* Seleccione Negocio si Tiene un Negocio para ofrecer sus servicios a sus clientes."
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>