<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    app:cardCornerRadius="20dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linerListaHorizont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CEC5C5"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="5dp"
            android:paddingHorizontal="10dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardIMG"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="#FF9800"
                app:cardCornerRadius="25dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/photoUser"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_person" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nombreUser"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:text="Nombre"
                android:textColor="#2175B8"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_eliminarList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:backgroundTint="#B82306"
                android:textColor="@color/white"
                android:text="Cancelar " />

        </LinearLayout>

        <TextView
            android:id="@+id/lblEstadoLista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/border_text"
            android:backgroundTint="#F6F4F4"
            android:gravity="center"
            android:textColor="#0A23B3"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
